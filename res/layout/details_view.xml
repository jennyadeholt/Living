<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/list_item">

    <LinearLayout
            android:id="@+id/basic_info"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">

        <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="70dp"
                android:layout_height="47dp"
                android:src="@drawable/icon" />

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="2"
                      android:paddingLeft="10dp"
                      android:orientation="vertical"
                      android:layout_gravity="center_vertical"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/address"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Östervärnsgatan 9a"/>
            <TextView
                    android:id="@+id/area"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Östervärn"/>
        </LinearLayout>

        <TextView
                android:id="@+id/number_of_objects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:paddingTop="10dp"
                android:paddingRight="10dp"/>

    </LinearLayout>
    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#302F2F"
            android:paddingBottom="25dp"
            android:id="@+id/mainLayout">

        <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" />

                <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/btn_star_off_disabled_focused_holo_light" />
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@id/basic_info"
                    android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                        android:id="@+id/mapFragment"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:apiKey="AIzaSyDPGgizbgjQe2SeXnZ_8Z_wmd_jM4EXhII" />

                <TextView
                        android:text="@string/map_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <WebView
                        android:id="@+id/webView"
                        android:layout_width="200dp"
                        android:layout_margin="10dp"
                        android:layout_height="200dp"/>

                <TextView
                        android:text="@string/images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
