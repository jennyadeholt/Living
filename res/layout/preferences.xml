<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
        <fragment
                android:id="@+id/preferences"
                android:name="com.jd.living.activity.settings.SearchPreferencesFragment_"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:padding="0dp">
        <Button
                android:id="@+id/clear"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_notification_clear_all"
                android:layout_height="fill_parent"
                android:text="@string/preferences_clear_search"/>
        <Button
                android:id="@+id/search"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/ic_menu_search"
                android:text="@string/preferences_launch_search"/>
    </LinearLayout>


</LinearLayout>